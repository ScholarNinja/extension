{
    "name": "Scholar Ninja",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "Distributed open index of scholarly content",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/vendor/underscore-min.js",
            "scripts/vendor/sha256.js",
            "scripts/vendor/peer.js",
            "scripts/vendor/webrtc-chord.js",
            "scripts/browserified/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "Scholar Ninja",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/browserified/content.js"
            ]
        }
    ],
    "permissions": [
        "unlimitedStorage",
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}